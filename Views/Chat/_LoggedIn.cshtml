@{
    Layout = "_Layout";
}

<nav class="navbar">
    <a href="/">taChat</a>
    <a id="create-room-btn" class="cursor-pointer">New room</a>
</nav>

<main class="main">
    @(await Component.InvokeAsync<RoomListViewComponent>())

    @RenderBody()
</main>

<div id="create-room-modal" class="modal">
    <form asp-action="CreateRoom" asp-controller="Chat" class="modal-body" method="post">
        <span class="modal-title">Create room</span>
        <input name="name" type="text" class="modal-input" />
        <span class="modal-actions">
            <button type="submit">Create</button>
            <button type="button" onclick="closeModal()">Cancel</button>
        </span>
    </form>
</div>