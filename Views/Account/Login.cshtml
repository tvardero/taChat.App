@model AccountViewModel

<div class="h-100 d-flex align-items-center justify-content-center bg-dark">
    <div class="card bg-white text-white" style="--bs-bg-opacity: .05;">
        <div class="card-body">
            <form asp-controller="Account" method="post" class="d-flex flex-column gap-3">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="w-100 d-flex flex-row align-items-center">
                    <label asp-for="UserName" style="min-width:120px"></label>
                    <div class="flex-grow-1 d-flex flex-column align-self-end">
                        <input asp-for="UserName" class="form-control bg-dark text-white" style="min-width:100px" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>

                <div class="w-100 d-flex flex-row align-items-center">
                    <label asp-for="Password" style="min-width:120px"></label>
                    <div class="flex-grow-1 d-flex flex-column align-self-end">
                        <input asp-for="Password" class="form-control bg-dark text-white" style="min-width:100px" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex flex-row justify-content-center gap-3">
                    <button type="submin" asp-action="Login" class="btn btn-outline-primary">Log in</button>
                    <button type="button" asp-action="SignUp" class="btn btn-outline-secondary">Sign up</button>
                </div>

            </form>
        </div>
    </div>
</div>